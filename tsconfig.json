{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@gastro-*": ["./src/assets/img/gastro/*"]
    },
    "allowJs": true,
    "declaration": false,  // Añade esta línea
    "emitDeclarationOnly": false  // Añade esta línea
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [  // Añade esta sección
    "node_modules",
    "dist",
    "ios",
    "android"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}